<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isaac"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.isaac.StartActivity"
            android:label="@string/app_name"
               android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.isaac.PlayActivity"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.isaac.GameoverActivity"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.isaac.ChoiceActivity" 
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.isaac.MadebyActivity" 
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.isaac.PauseActivity" 
            android:screenOrientation="sensorLandscape" >
        </activity>
    </application>
        <uses-permission 
            android:name="android.permission.VIBRATE">
        </uses-permission>

</manifest>