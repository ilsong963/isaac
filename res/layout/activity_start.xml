<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/start_background"
    tools:context="com.isaac.StartActivity" >

 <ImageView
     android:id="@+id/start_pressstart"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="bottom|center"
     android:layout_marginBottom="50dp"
     android:layout_marginRight="10dp"
     android:src="@drawable/pressstart" />

    <ImageView
        android:id="@+id/start_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/start_main" />

    <ImageView
        android:id="@+id/start_shadow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/backgrond_shadow" />

</FrameLayout>
